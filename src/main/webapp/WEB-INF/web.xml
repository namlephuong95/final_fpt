<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CreatePhoneServlet</servlet-name>
        <servlet-class>com.example.example_fpt_final.controller.CreatePhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePhoneServlet</servlet-name>
        <url-pattern>/admin/phone/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListPhoneServlet</servlet-name>
        <servlet-class>com.example.example_fpt_final.controller.ListPhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPhoneServlet</servlet-name>
        <url-pattern>/admin/phone/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditPhoneServlet</servlet-name>
        <servlet-class>com.example.example_fpt_final.controller.EditPhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPhoneServlet</servlet-name>
        <url-pattern>/admin/phone/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeletePhoneServlet</servlet-name>
        <servlet-class>com.example.example_fpt_final.controller.DeletePhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePhoneServlet</servlet-name>
        <url-pattern>/admin/phone/delete</url-pattern>
    </servlet-mapping>
</web-app>